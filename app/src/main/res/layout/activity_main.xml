<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintEnd_toStartOf="@+id/distanceView"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        mapbox:mapbox_cameraZoom="12.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_location_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="10dp"
        android:tint="@android:color/white"
        app:backgroundTint="@color/design_default_color_primary"
        app:srcCompat="@android:drawable/ic_search_category_default"
        mapbox:layout_constraintEnd_toStartOf="@+id/d"
        mapbox:layout_constraintStart_toEndOf="@+id/distanceView"
        mapbox:layout_constraintTop_toTopOf="@+id/mapView" />

    <TextView
        android:id="@+id/s"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:textSize="15dp"
        android:textStyle="bold"
        mapbox:layout_constraintBaseline_toBaselineOf="@+id/d"
        mapbox:layout_constraintEnd_toEndOf="@+id/d"
        mapbox:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/d"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="525dp"
        android:layout_marginEnd="101dp"
        android:textSize="15dp"
        android:textStyle="bold"
        mapbox:layout_constraintBottom_toBottomOf="@+id/distanceView"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintStart_toEndOf="@+id/fab_location_search"
        mapbox:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/distanceView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="411dp"
        android:textSize="20dp"
        android:textStyle="bold"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintEnd_toStartOf="@+id/fab_location_search"
        mapbox:layout_constraintStart_toEndOf="@+id/mapView"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toTopOf="@+id/mapView" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="550dp"
        android:text="Confirm"
        android:textSize="20dp"
        mapbox:layout_constraintBottom_toBottomOf="@+id/s"
        mapbox:layout_constraintStart_toStartOf="@+id/mapView"
        mapbox:layout_constraintTop_toBottomOf="@+id/s" />


</androidx.constraintlayout.widget.ConstraintLayout>